<Window x:Class="WinTOTAL_Quick_List_Copier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="WinTOTAL Quick List Copier" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <TextBlock TextWrapping="WrapWithOverflow">
            Please close WinTOTAL before using this utility.  It connects to the WinTOTAL SQL Server database directly and modifies the quick lists.
            </TextBlock>
            <TextBlock TextWrapping="WrapWithOverflow" Margin="0,10,0,0">
            IMPORTANT: 1) Back up your database using Vault/Exact, backing up your preferences.  2) Use this utility at your own risk!
            </TextBlock>
        </StackPanel>
        <TabControl DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <TabItem Header="Server connections">
                <CheckBox Margin="5">There is a single WinTOTAL server</CheckBox>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>